{% extends 'base.html.twig' %}
{% form_theme formPrevision 'bootstrap_4_layout.html.twig' %}
{% block body %}
    <h3>Prevision pour : app.s
    </h3>
    <table>
        <tbody>

            <tr>
                <td>

                    {{ form_start(formPrevision)}}
                    {{ form_row(formPrevision.sousrubrique)}}

                </td>

                <td>

                    {{ form_row(formPrevision.service, {'attr': {'selected':'{{ app.user.services.designation }}' }})}}

                </td>

                <td></td>
            </tr>
            <tr>
                <td>
                {{ form_row(formPrevision.lignebudgetprevision)}}
                   
                </td>
                <td>

                    {{ form_row(formPrevision.anneebudgetprevision)}}
                </td>
                <td></td>
            </tr>
            
            <tr>
                <td>

                    {{ form_row(formPrevision.iscentraliser)}}
                </td>
                <td>
                    {{ form_row(formPrevision.montantprevision, {'attr' :{'required':'required'}})}}
                </td>
                <td></td>
            </tr>
            <tr>
                <td>
                    <button type="submit" name="send" class="btn btn-success">
                        Sauvegarder</button>
                </td>
                <td>
                    <h5></h5>

                </td>
                <td></td>
            </tr>

            {{ form_end(formPrevision)}}

            <tr>
                <td colspan='3'>
                    <table class="table table-hover">

                        <thead>
                            <tr class="table-primary" >
                                <th colspan='7'>
                                    Les previsions budgetaire </th>
                             
                                
                            </tr>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Rubrique</th>
                                <th scope="col">Ligne</th>
                                <th scope="col">Service</th>
                                <th scope="col">Ann√©e</th>
                                <th scope="col">Montant</th>
                                <th scope="col">Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            {% for prevision in previsions %}
                                <tr>
                                    <th scope="row">{{prevision.id}}</th>
                                    <td>{{prevision.nom}}</td>
                                    <td>{{prevision.intituleLigne}}</td>
                                    <td>{{prevision.designation}}</td>
                                    <td>{{prevision.anneebudget}}</td>
                                    <td>{{prevision.montantprevision}}</td>

                                    <td>
                                        <a href="{{path('prevision_edit', {'id':prevision.id})}}"><img src="{{path('edit_button')}}"/></a>
                                        &nbsp; &nbsp;
                                        <a href="{{path('delete_prevision', {'id':prevision.id})}}">
                                            <img src="{{path('delete_button')}}"/></a>
                                    </td>
                                </tr>
                            {% endfor %}
                            <tr>
                                <td ></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>

                        </tbody>
                    </table>

                </td>
            </tr>

            <tr>
                <td colspan='3'>
                   
                </td>
            </tr>

        </tbody>
    </table>
{% endblock %}