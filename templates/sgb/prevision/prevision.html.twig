                        <thead>
                            <tr class="table-primary" >
                                <th colspan='7'>
                                    Les previsions budgetaire </th>
                             
                                
                            </tr>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Rubrique</th>
                                <th scope="col">Ligne</th>
                                <th scope="col">Service</th>
