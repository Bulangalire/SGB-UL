{% extends 'base.html.twig' %}
{% form_theme formPersonne 'bootstrap_4_layout.html.twig' %}

{% block body %}
      <h3>Personne
                    </h3>
    <table>
        <tbody>
      
          <tr> 
{% for role in app.user.roles %}
    {{role}}
{% endfor %}
              <td nowrap valign=top>
                   
                    {{ form_start(formPersonne)}}
                    <button type="submit" class="btn btn-success">
                        {% if editMode %}
                            Modifier
                        {% else %}
                            Enregistrer
                        {% endif %}

                    </button>

                    {{ form_row(formPersonne.nom, {'attr' :{'placeholder':'Nom'}})}}
                    {{ form_row(formPersonne.postnom, {'attr' :{'placeholder':'Postnom'}})}}
                    {{ form_row(formPersonne.prenom, {'attr' :{'placeholder':'Prénom'}})}}
                    {{ form_row(formPersonne.password, {'attr' :{'placeholder':'password'}})}}
                    {{ form_row(formPersonne.username, {'attr' :{'placeholder':'Login'}})}}
                    {{ form_row(formPersonne.services)}}
                     {{ form_row(formPersonne.signature)}}
 
                    {{ form_end(formPersonne)}}

              </td>

            <td rowspan=2 valign=top>

            <table class="table table-hover">
                <thead>
                    <tr class="table-primary">
                        <th scope="col">ID</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Postnom</th>
                        <th scope="col">Prénom</th>
                        <th scope="col">Login</th>
                        <th scope="col">Servive</th>
                        <th scope="col">Action</th>
                            
                       
                    </tr>
                </thead>
                <tbody>
                    {% for personne in lesPersonnes %}
                        <tr>
                            <th scope="row">{{personne.id}}</th>
                            <td>{{personne.nom}}</td>
                            <td>{{personne.postnom}}</td>
                            <td>{{personne.prenom}}</td>
                            <td>{{personne.username}}</td>
                            <td>{{personne.services.designation}}</td>
                           <td>
                                <a href="{{path('personne_edit', {'id':personne.id})}}"><img src="{{path('edit_button')}}" /></a> 
                            
                          <a class="confirmModalLink" data-toggle="modal" href="{{path('personne_delete', {'id':personne.id})}}">
                                            <i class="glyphicon glyphicon-trash"></i>

                                            <img src="{{path('delete_button')}}"/></a>

                                        <div class="modal hide fade" id="confirmModal">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                        <h4 class="modal-title">Confirmation de la suppression</h4>
                                                    </div>
                                                    <div class="modal-body">
                                                        Etes-vous sur de vouloir supprimer cette personne !
                                                    </div>
                                                    <div class="modal-footer">
                                                        <a href="#" class="btn btn-primary" id="confirmModalNo">Non</a>
                                                        <a href="#" class="btn btn-primary" id="confirmModalYes">Oui</a>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    
                                    
                                    
                                      
                            
                            
                            
                            
                            
                            </td>
                        </tr>
                    {% endfor %}
                    <tr class="table-primary">
                        <th scope="row"></th>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                         <td></td>
                    </tr>

                </tbody>
            </table>

        </td>

    </tr>
    <tr>
    </tr>

</tbody>
</table>

{% endblock %}