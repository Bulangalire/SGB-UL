{% extends 'base.html.twig' %}

{% block title %} {{ controller_name }}!{% endblock %}

{% block body %}

<hr>
  
    
<a type="submit" href="{{path('sgb_create')}}" class="btn btn-primary" >Ajout</a>
<a type="submit" href="{{path('sgb_excelimport')}}" class="btn btn-primary" >Importet des lignes depuis Excel</a>
<a type="submit" name="trierdepenses" class="btn btn-success" >Depenses : {{ligneDepense}}</a>
<a type="submit" name="trierRecette" class="btn btn-success">Recettes : {{ligneRecette}}</a>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Intitulé</th>
      <th scope="col">Compte</th>
      <th scope="col">Catégorie</th>
      <th scope="col">Description</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
{% for uneLigne in lignebudgets %}
    <tr>
      <th scope="row">{{uneLigne.id}}</th>
      <td>{{uneLigne.intituleLigne}}</td>
      <td> {{uneLigne.compteLigne}}</td>
      <td>{{uneLigne.categorieLigne}}</td>
      <td>{{uneLigne.description}}</td>
      <td><a href="{{path('sgb_edit', {'id':uneLigne.id})}}" class="btn btn-primary">Modifier</a>
        <a href="{{path('sgb_delete', {'id':uneLigne.id})}}" class="btn btn-primary">Supprimer</a>
      </td>
    </tr>
{% endfor %}
    <tr class="table-primary">
      <th scope="row"></th>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
    </tr>
   
  </tbody>
</table> 


{% endblock %}
