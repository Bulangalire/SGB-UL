                {% if (is_granted('ROLE_SG')) %}
                    <td>{{form_row(frmAddOp.autoriserSG)}}</td>
                {% else %}
                    <td>{{form_row(frmAddOp.autoriserSG, {'attr':{'disabled':'disabled'}})}}</td>
